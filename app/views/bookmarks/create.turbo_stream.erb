<% 
  partial_name  = if previous_controller_name == "tweets" && previous_action_name == "show"
                    "tweets/show_stats"
                  else
                    "tweets/tweet"
                  end
%>

<%= turbo_stream.replace dom_id(@tweet) do %>
  <%= render partial: partial_name, locals: { tweet_presenter: TweetPresenter.new(tweet: @tweet, current_user: current_user) } %>
<% end %>
