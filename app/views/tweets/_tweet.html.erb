<%= turbo_frame_tag dom_id(tweet) do %>  
  <div class="tweet py-3 px-2 border-bottom">
    <div class="d-flex flex-row">  
      
      <div class="me-2">
        <%= image_tag tweet.user.avatar, size: "40x40", class: "rounded-circle" %>
      </div>
      <div>
        <% if(Time.zone.now - tweet.created_at) > 1.day %>
          <p class="mt-2"><%= tweet.user.display_name %> @<%= tweet.user.username %> . <%= tweet.created_at.strftime("%b %-d") %></p>
        <% else %>
          <p class="mt-2"><%= tweet.user.display_name %> @<%= tweet.user.username %> . <%= time_ago_in_words(tweet.created_at) %></p>
        <% end %>
      </div>
      
    </div>
      <p class="mb-0"><%= tweet.body %></p>
      
  </div>
<% end %>