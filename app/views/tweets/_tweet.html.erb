<%= turbo_frame_tag dom_id(tweet_presenter.tweet) do %>  
  <div class="tweet py-3 px-2 border-bottom">
    <div class="d-flex flex-row">  
      <div class="me-2">
        <%= image_tag tweet_presenter.avatar, size: "40x40", class: "rounded-circle" %>
      </div>
      <div>
          <p class="mt-2"><%= tweet_presenter.display_name %> @<%= tweet_presenter.username %> . <%= tweet_presenter.created_at %></p>
      </div>
    </div>
      <p class="mb-0"><%= tweet_presenter.body %></p>

    <div class="d-flex justify-content-between align-items-center action-links">
      <div>
        <%= link_to "#", class: "text-decoration-none text-black retweets" do %>
          <%= image_tag "analytics.png", size: "20x20",class: "me-1" %>
          <span>Views<span>
        <% end %>
      </div>
      <div>
        <%= link_to "#", class: "text-decoration-none text-black likes" do %>
          <%= image_tag "speech.png", size: "20x20",class: "me-1" %>
          <span>Replies<span>
        <% end %>
      </div>
      <div>
        <%= link_to "#", class: "text-decoration-none text-black retweets" do %>
          <%= image_tag "retweet.png", size: "20x20",class: "me-1" %>
          <span>Retweets<span>
        <% end %>
      </div>
      <div>
        <% if current_user.likes.pluck(:tweet_id).include?(tweet_presenter.tweet.id) %>
          <%= link_to tweet_like_path(tweet_presenter.tweet, tweet_presenter.tweet.likes.find_by(user: current_user)), data: { "turbo-method": "delete" }, class: "text-decoration-none text-black" do %>
            <%= image_tag "heart-full.png", size: "20x20",class: "me-1" %>
            <span class=""><%= tweet_presenter.likes_count %></span>
          <% end %>
        <% else %>
          <%= link_to tweet_likes_path(tweet_presenter.tweet), data: { "turbo-method": "post" }, class: "text-decoration-none text-black likes" do %>
            <%= image_tag "heart.png", size: "20x20", class: "me-1" %>
            <span class=""><%= tweet_presenter.likes_count %></span>
          <% end %>
        <% end %>
      </div>
      <div>
        <%= link_to "#", class: "text-decoration-none text-black bookmarks" do %>
          <%= image_tag "bookmark.png", size: "20x20",class: "me-1" %>
          <span>Bookmark<span>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
