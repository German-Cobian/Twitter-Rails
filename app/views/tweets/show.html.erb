<%= turbo_frame_tag dom_id(@tweet), class:"col-6 d-flex flex-row border border-dark" do %>
    <div class="d-flex flex-col">
      <div class="ms-3">
        <div>

          <%= link_to dashboard_path, data: {turbo_frame: :_top}, class: "fs-4 text-decoration-none txt-black fw-semibold" do %>
            <%= image_tag "back-arrow.png", size: "30x30", class: "me-5" %>
            <span style="position: relative; top: 2px">Tweet</span>
          <% end %>

          <%= turbo_frame_tag dom_id(@tweet_presenter.tweet) do %>
            <div data-controller="tweet-card" data-tweet-path="<%= tweet_path(@tweet_presenter.tweet) %>" class="tweet py-3 px-2 border-bottom">
              <div class="d-flex flex-row">  
                <div class="me-2">
                  <%= image_tag @tweet_presenter.avatar, size: "40x40", class: "rounded-circle" %>
                </div>
                <div>
                    <p class="mt-2"><%= @tweet_presenter.display_name %> @<%= @tweet_presenter.username %> . <%= @tweet_presenter.created_at %></p>
                </div>
              </div>
                <p class="mb-0"><%= @tweet_presenter.body %></p>
          
              <div class="d-flex justify-content-between align-items-center action-links">
                <div>
                  <%= link_to "#", data: {"ignore-click": true }, class: "text-decoration-none text-black views" do %>
                    <%= image_tag "analytics.png", size: "20x20", class: "me-1" %>
                    <span>Views<span>
                  <% end %>
                </div>
                <div>
                
                  <%= link_to tweet_path(@tweet_presenter.tweet), target: :_top, data: {"ignore-click": true }, class: "text-decoration-none text-black replies" do %>
                    <%= image_tag "speech.png", size: "20x20", class: "me-1" %>
                    <span>Replies<span>
                  <% end %>
                </div>
                <div>
                  <%= link_to @tweet_presenter.tweet_retweeted_or_not_path, data: { "turbo-method": @tweet_presenter.turbo_retweeted_data_method, "ignore-click": true }, class: "text-decoration-none text-black retweets" do %>
                    <%= image_tag @tweet_presenter.retweet_image, size: "20x20", class: "me-1" %>
                    <span><%= @tweet_presenter.retweets_count %><span>
                  <% end %>
                </div>
                <div>
                  <%= link_to @tweet_presenter.tweet_like_or_not_path, data: { "turbo-method": @tweet_presenter.turbo_liked_data_method, "ignore-click": true }, class: "text-decoration-none text-black" do %>
                    <%= image_tag @tweet_presenter.like_heart_image, size: "20x20", class: "me-1" %>
                    <span class=""><%= @tweet_presenter.likes_count %></span>
                  <% end %>
                </div>
                <div>
                  <%= link_to @tweet_presenter.tweet_bookmarked_or_not_path, data: { "turbo-method": @tweet_presenter.turbo_bookmarked_data_method, "ignore-click": true }, class: "text-decoration-none text-black bookmarks" do %>
                    <%= image_tag @tweet_presenter.bookmark_image, size: "20x20", class: "me-1" %>
                    <span><%= @tweet_presenter.bookmark_text %><span>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %> 

        </div>
        <div>
          <%= @tweet.body %>
        </div>
      </div>
    </div>
<% end %>

<div class="col-3 border border-danger">
  <h4 class="text-danger ms-3">This is the Show third column</h4>
</div>

